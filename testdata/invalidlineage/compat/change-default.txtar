# changing a default value is not backwards compatible
-- in.cue --

import "github.com/grafana/thema"

thema.#Lineage
name: "change-default"
schemas: [
    {
        version: [0, 0]
		schema: {
		    aunion: *"foo" | "bar"
        }
    },
    {
        version: [0, 1]
		schema: {
		    aunion: "foo" | "bar" | *"baz"
        }
    },
]

lenses: [
    {
        to: [0, 0]
        from: [0, 1]
        input: _
        result: {
            aunion: input.aunion
        }
    },
]
-- out/bindfail --
schema 0.1 must be backwards compatible with schema 0.0
