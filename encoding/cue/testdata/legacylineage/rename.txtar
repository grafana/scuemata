			rel: {
				after:     from.before
				unchanged: from.unchanged
			}
			lacunas: []
		}
		lens: reverse: {
			to:         seqs[0].schemas[0]
			from:       seqs[1].schemas[0]
			translated: to & rel
			rel: {
				before:    from.after
				unchanged: from.unchanged
			}
			lacunas: []
		}
	},
]
