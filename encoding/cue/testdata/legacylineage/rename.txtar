		schemas: [
			{
				before:    string
				unchanged: string
			},
		]
	},
	{
		schemas: [
			{
				after:     string
				unchanged: string
			},
		]

		lens: forward: {
			to:         seqs[1].schemas[0]
			from:       seqs[0].schemas[0]
